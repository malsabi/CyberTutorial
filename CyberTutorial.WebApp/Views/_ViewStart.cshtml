@{
    string currentLayout = "_Layout";
    if (ViewContext.RouteData.Values["controller"].ToString() == "Employee")
    {
        if (ViewContext.RouteData.Values["action"].ToString() == "StartQuiz")
        {
            currentLayout = "EmployeeQuizLayout";
        }
        else
        {
            currentLayout = "EmployeeLayout";
        }
    }
    else if (ViewContext.RouteData.Values["Controller"].ToString() == "Company")
    {
        currentLayout = "CompanyLayout";
    }
    Layout = currentLayout;
}