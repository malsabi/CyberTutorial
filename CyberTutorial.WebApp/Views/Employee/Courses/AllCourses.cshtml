@model List<CourseModel>
@{
    ViewData["Title"] = "All Courses";
}

@section Scripts
{
    <script src="~/js/employee/courses-emp.js" asp-append-version="true"></script>
}

<div class="row ps-3 pt-3 pe-3 gx-4 gy-4">
    @foreach (CourseModel course in Model)
    {
        <div class="col-lg-3 col-auto">
            <div class="card d-flex flex-column h-100">
                <img src="@course.CourseImage" class="card-img-top" style="height: 300px" alt="Course Image">
                <div class="card-body">
                    <h5 class="card-title">@course.CourseName</h5>
                    <p class="card-text">@course.CourseDescription</p>
                </div>
                <button type="button" class="ApplyCourseButton btn btn-lg btn-primary mt-auto mb-3 ms-3 me-3" data-course-id="@course.CourseId">Apply Now</button>
            </div>
        </div>
    }
</div>