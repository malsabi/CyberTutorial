@model QuizModel
@{
    ViewData["Title"] = "Quiz";
}

@section Scripts
{
    <script src="~/js/employee/employee-quiz.js" asp-append-version="true"></script>
}

<div class="row ps-3 pe-3">
    <div class="col-lg-12 col-auto">
        <div class="card bg-transparent text-white border-bottom border-1">
            <div class="card-header d-flex flex-column ps-0">
                <h1 class="mb-2">@Model.Title</h1>
                <div class="text-muted mb-2">Started: <span class="text-white fw-bold">@DateTime.Now.ToString()</span></div>
                <div class="text-muted mb-2">Total Questions: <span class="text-white fw-bold">@Model.TotalQuestions</span></div>
                <div class="text-muted mb-2">Maximum Score: <span class="text-white fw-bold">@Model.MaximumScore</span></div>
                <div class="text-muted mb-3">Time Left: <span class="text-white fw-bold">00:00 To 30:00 Minutes</span></div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 col-auto ps-lg-5 pe-lg-5 pt-lg-5">
        <div class="card border-secondary border-2">
            <div class="card-header d-flex justify-content-between">
                <h3>Question <span id="QuestionNumber">1</span></h3>
                <h3>10 pts</h3>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h5 class="card-title" id="QuestionTitle">@Model.Questions.First().Title</h5>
                    <h6 class="card-text" id="QuestionDescription">@Model.Questions.First().Description</h6>
                </div>
                @foreach (AnswerModel answer in Model.Questions.First().Answers)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="@answer.AnswerId" value="@answer.AnswerText" name="answer">
                        <label class="form-check-label" for="@answer.AnswerId">
                            @answer.AnswerText
                        </label>
                    </div>
                }
                <div class="d-flex justify-content-between mt-3 pt-3 border-top border-1">
                    <h3 id="CurrentQuestionNumber">1 of @Model.TotalQuestions Questions</h3>
                    <button type="button" class="btn btn-lg btn-primary" id="NextQuestionButton">
                        Next Question
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 col-auto ps-lg-5 pe-lg-5 pt-lg-5">
        <div class="d-flex justify-content-end border-top border-1 pt-lg-3 pb-lg-3">
            <button type="button" class="btn btn-lg btn-primary float-right" id="SubmitQuizButton">
                Submit
            </button>
        </div>
    </div>
</div>