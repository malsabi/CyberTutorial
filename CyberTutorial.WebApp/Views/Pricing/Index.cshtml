@{
    ViewData["Title"] = "Pricing";
}
<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="check" viewBox="0 0 16 16" fill="white">
        <title>Check</title>
        <path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z" />
    </symbol>
</svg>

<div class="container">
    <div class="row pt-lg-5">
        <div class="col">
            <p class="text-white text-center display-3 fw-bold">
                Pricing plans
            </p>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <p class="text-white text-center">
                Free 30 days trial. No credit card required. Cancel anytime.
            </p>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">
                <div class="card-header py-3">
                    <h4 class="my-0 fw-normal">Free</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">$0<small class="text-muted fw-light">/mo</small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>10 users included</li>
                        <li>2 GB of courses</li>
                        <li>Email support</li>
                        <li>Help center access</li>
                    </ul>
                    <button type="button" class="w-100 btn btn-lg btn-outline-primary">Sign up for free</button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">
                <div class="card-header py-3">
                    <h4 class="my-0 fw-normal">Pro</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">$15<small class="text-muted fw-light">/mo</small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>20 users included</li>
                        <li>10 GB of courses</li>
                        <li>Priority email support</li>
                        <li>Help center access</li>
                    </ul>
                    <button type="button" class="w-100 btn btn-lg btn-primary">Get started</button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm border-primary">
                <div class="card-header py-3 text-white bg-primary border-primary">
                    <h4 class="my-0 fw-normal">Enterprise</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">$29<small class="text-muted fw-light">/mo</small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>unlimited users included</li>
                        <li>100+ GB of courses</li>
                        <li>Phone and email support</li>
                        <li>Help center access</li>
                    </ul>
                    <button type="button" class="w-100 btn btn-lg btn-primary">Contact us</button>
                </div>
            </div>
        </div>
    </div>

    <p class="text-white text-center display-3 fw-bold mb-3">Compare plans</p>

    <div class="table-responsive pb-lg-5">
        <table class="table text-center text-white">
            <thead>
                <tr>
                    <th style="width: 34%;"></th>
                    <th style="width: 22%;">Free</th>
                    <th style="width: 22%;">Pro</th>
                    <th style="width: 22%;">Enterprise</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row" class="text-start">Public</th>
                    <td><svg width="24" height="24"><use xlink:href="#check" /></svg></td>
                    <td><svg width="24" height="24"><use xlink:href="#check" /></svg></td>
                    <td><svg width="24" height="24"><use xlink:href="#check" /></svg></td>
                </tr>
                <tr>
                    <th scope="row" class="text-start">Private</th>
                    <td></td>
                    <td><svg width="24" height="24"><use xlink:href="#check" /></svg></td>
                    <td><svg width="24" height="24"><use xlink:href="#check" /></svg></td>
                </tr>
            </tbody>

            <tbody>
                <tr>
                    <th scope="row" class="text-start">Permissions</th>
                    <td><svg width="24" height="24"><use xlink:href="#check" /></svg></td>
                    <td><svg width="24" height="24"><use xlink:href="#check" /></svg></td>
                    <td><svg width="24" height="24"><use xlink:href="#check" /></svg></td>
                </tr>
                <tr>
                    <th scope="row" class="text-start">Sharing</th>
                    <td></td>
                    <td><svg width="24" height="24"><use xlink:href="#check" /></svg></td>
                    <td><svg width="24" height="24"><use xlink:href="#check" /></svg></td>
                </tr>
                <tr>
                    <th scope="row" class="text-start">Unlimited members</th>
                    <td></td>
                    <td><svg width="24" height="24"><use xlink:href="#check" /></svg></td>
                    <td><svg width="24" height="24"><use xlink:href="#check" /></svg></td>
                </tr>
                <tr>
                    <th scope="row" class="text-start">Extra security</th>
                    <td></td>
                    <td></td>
                    <td><svg width="24" height="24"><use xlink:href="#check" /></svg></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>