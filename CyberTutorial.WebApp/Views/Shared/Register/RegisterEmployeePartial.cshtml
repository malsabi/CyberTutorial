@model RegisterEmployeeModel

<form asp-controller="Home" asp-action="RegisterEmployee" method="post" id="RegisterEmployeeForm" novalidate>
    <div class="mb-3">
        <div id="RegisterEmployeeAlert" class="alert alert-danger d-flex align-items-center alert-dismissible fade show d-none" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
    <label class="form-label mb-1">Full Name</label>
    <div class="row mb-3">
        <div class="col-6">
            <div class="form-group">
                <input asp-for="FirstName" type="text" class="form-control bg-dark rounded-3 border-info text-white" id="FirstName" placeholder="First">
                <span asp-validation-for="FirstName" class="text-danger"></span>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <input asp-for="LastName" type="text" class="form-control bg-dark rounded-3 border-info text-white" id="LastName" placeholder="Last">
                <span asp-validation-for="LastName" class="text-danger"></span>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        </div>
    </div>
    <div class="mb-3">
        <div class="form-group">
            <label asp-for="CompanyId" for="CompanyName" class="form-label">Company Id</label>
            <input asp-for="CompanyId" type="text" class="form-control bg-dark rounded-3 border-info text-white" id="CompanyId" placeholder="xxxxxxxxxxxx">
            <span asp-validation-for="CompanyId" class="text-danger"></span>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-6">
            <label asp-for="Gender" for="GenderComboBox" class="form-label">Gender</label>
            <select asp-for="Gender" class="form-select custom-selectform-arrow bg-dark text-white rounded-3 border-info" id="GenderComboBox">
                <option selected>Male</option>
                <option>Female</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="col-6">
            <label asp-for="DateOfBirth" for="DateOfBirth" class="form-label">Date Of Birth</label>
            <input asp-for="DateOfBirth" type="date" class="form-control bg-dark text-white rounded-3 border-info" id="DateOfBirth" value="@DateTime.Today.ToString("yyyy-MM-dd")">
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="PhoneNumber" for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" type="text" class="form-control bg-dark rounded-3 border-info text-white" id="PhoneNumber" placeholder="xx xxx xxxx">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label asp-for="EmailAddress" for="EmailAddress" class="form-label">Email Address</label>
                <input asp-for="EmailAddress" type="email" class="form-control bg-dark rounded-3 border-info text-white" id="EmailAddress" placeholder="Email Address">
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="Password" for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control bg-dark rounded-3 border-info text-white" id="Password" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label asp-for="ConfirmPassword" for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control bg-dark rounded-3 border-info text-white" id="ConfirmPassword" placeholder="Confirm Password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        </div>
    </div>
    <div class="d-grid justify-content-start">
        <button type="submit" class="btn btn-lg btn-info text-dark rounded-3" id="SignUpEmployeeButton">
            Sign Up
        </button>
    </div>
</form>

<div class="modal fade" id="EmployeeSuccessModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-light">
            <div class="modal-header border-0">
                <button type="button" class="btn-close btn-close-dark" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col text-center">
                        <h3 class="text-success text-wrap">
                            Thanks! Your account has been successfully created.
                        </h3>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col text-center">
                        <p class="text-secondary text-wrap">
                            Please check your inbox, a code is sent on your email address,
                            which will be required for company authorization.
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 d-grid mx-auto">
                        <button type="button" class="btn btn-lg btn-success rounded-pill" data-bs-dismiss="modal">OK</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>